extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 分类名
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in categories
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td
                                a(targe="_blank", href="/movie/#{item._id}") 查看
                            td
                                a(targe="_blank", href="/admin/movie/update/#{item._id}") 修改
                            td
                                button.btn.btn-primary.del(type="button", data-id="#{item._id}") 删除
        .row.text-right.float-right
            a.btn.btn-success(href="/admin/category/new") 新增
    script(src="/js/category.js")