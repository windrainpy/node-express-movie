extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名字
                        th 年份
                        th 导演
                        th 国家
                        th 语言
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td #{item.title}
                            td #{item.year}
                            td #{item.doctory}
                            td #{item.country}
                            td #{item.language}
                            td
                                a(targe="_blank", href="/movie/#{item._id}") 查看
                            td
                                a(targe="_blank", href="/admin/movie/update/#{item._id}") 修改
                            td
                                button.btn.btn-primary.del(type="button", data-id="#{item._id}") 删除
        .row.text-right.float-right
            a.btn.btn-success(href="/admin/movie/new") 新增
    script(src="/js/admin.js")