extends ../layout

block content
    .container
        .row
            each item in movies
                .col-md-3
                    .thumbail
                        a(href="/movie/#{item._id}")
                            img(src="#{item.poster}", alt="#{item.title}" width="200" height="280")
                        .caption
                            h6 #{item.title}
                            p
                                a.btn.btn-primary(href="/movie/#{item._id}") 观看预告片
